{
  "name": "jolly-roger-web",
  "version": "0.0.1",
  "description": "Frontend for jolly-roger.",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@sveltejs/adapter-static": "^2.0.2",
    "@sveltejs/kit": "1.15.9",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "abitype": "^0.8.2",
    "autoprefixer": "^10.4.14",
    "daisyui": "^2.51.6",
    "eip-1193": "^0.2.5",
    "ipfs-gateway-emulator": "4.2.1-ipfs.2",
    "postcss": "^8.4.23",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.0",
    "pwag": "^0.1.0",
    "svelte": "^3.58.0",
    "svelte-check": "^3.2.0",
    "svelte-preprocess": "^5.0.3",
    "sveltejs-adapter-ipfs": "^0.4.12",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.4",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "ethereum-indexer-browser": "^0.6.2",
    "jolly-roger-indexer": "workspace:*",
    "named-logs": "^0.2.2",
    "theme-change": "^2.5.0",
    "viem": "^0.3.16",
    "web3-connection": "^0.0.8",
    "web3w-walletconnect-loader": "^0.4.3"
  },
  "scripts": {
    "prepare": "pwag static/icon.svg src/web-config.json",
    "dev": "echo 'waiting for src/lib/blockchain/data/contracts.ts...'; wait-on src/lib/blockchain/data/contracts.ts && vite dev",
    "build": "npm run prepare && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check .",
    "format": "prettier --plugin-search-dir . --write .",
    "svelte-check": "svelte-check",
    "serve": "ipfs-emulator --only -d build -p 8080"
  }
}
