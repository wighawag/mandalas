{
  "name": "mandalas",
  "version": "0.0.1",
  "description": "Mandalas",
  "private": true,
  "devDependencies": {
    "cross-env": "^10.1.0",
    "rimraf": "^6.1.3",
    "wait-on": "^9.0.4"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "---------------------- common lib ----------------------": "compile the common library",
    "common:dev": "pnpm run --filter ./common-lib run dev",
    "common:build": "pnpm run --filter ./common-lib run build",
    "---------------------- contracts ----------------------": "compile and deploy smart contracts",
    "contracts:local_node": "ldenv pnpm run --filter ./contracts local_node",
    "contracts:deploy": "ldenv pnpm run --filter ./contracts deploy @@MODE @@",
    "contracts:fork:deploy": "ldenv pnpm run --filter ./contracts fork:deploy @@MODE @@",
    "contracts:test": "ldenv pnpm run --filter ./contracts test",
    "contracts:lint": "pnpm --filter ./contracts lint",
    "contracts:execute": "ldenv pnpm run --filter ./contracts execute @@MODE @@",
    "contracts:fork:execute": "ldenv pnpm run --filter ./contracts fork:execute @@MODE @@",
    "contracts:verify": "ldenv pnpm run --filter ./contracts verify @@MODE @@",
    "contracts:compile": "ldenv pnpm --filter ./contracts compile",
    "contracts:compile:watch": "ldenv pnpm --filter ./contracts compile:watch",
    "contracts:build": "ldenv pnpm --filter ./contracts compile ~~ pnpm --filter ./contracts typescript ~~",
    "contracts:export": "pnpm --filter ./contracts export @@MODE @@",
    "---------------------- WEB ----------------------": "",
    "web:dev": "ldenv pnpm --filter ./web dev",
    "web:build": "ldenv pnpm --filter ./web build",
    "web:serve": "ldenv pnpm --filter ./web serve",
    "web:check": "ldenv pnpm --filter ./web check",
    "---------------------- FORMAT ----------------------": "",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "---------------------- START ----------------------": "",
    "test": "pnpm contracts:test",
    "stop": "pnpm run --filter ./contracts stop",
    "start": "pnpm run --filter ./contracts start"
  }
}
